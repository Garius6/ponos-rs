использовать "стд/ввод_вывод" как ио;

ио.вывести("=== Тесты индексирования и срезов строк ===");

// Тест 1: Простое индексирование
ио.вывести("Тест 1: Простое индексирование");
пер строка = "Привет";
пер первый = строка[0];
пер второй = строка[1];
пер последний = строка[5];
ио.вывести(первый);   // П
ио.вывести(второй);   // р
ио.вывести(последний); // т

// Тест 2: Срезы с обоими индексами
ио.вывести("Тест 2: Срезы с обоими индексами");
пер текст = "Привет, мир!";
пер начало = текст[0:7];    // "Привет,"
пер конец = текст[8:12];    // "мир!"
ио.вывести(начало);
ио.вывести(конец);

// Тест 3: Срезы без начала [:конец]
ио.вывести("Тест 3: Срезы без начала");
пер текст2 = "Абвгдеж";
пер срез1 = текст2[:3];  // "Абв"
ио.вывести(срез1);

// Тест 4: Срезы без конца [начало:]
ио.вывести("Тест 4: Срезы без конца");
пер срез2 = текст2[4:];  // "деж"
ио.вывести(срез2);

// Тест 5: Полный срез [:]
ио.вывести("Тест 5: Полный срез");
пер полный = текст2[:];  // "Абвгдеж"
ио.вывести(полный);

ио.вывести("=== Все тесты завершены ===");
