использовать "стд/ввод_вывод" как ио;
использовать "стд/строки" как стр;

ио.вывести("=== Тест модуля строки ===");

// Тест 1: обрезать (trim)
ио.вывести("Тест 1: обрезать");
пер с_пробелами = "  привет  ";
пер обрезанная = стр.обрезать(с_пробелами);
ио.вывести(обрезанная);  // "привет"

// Тест 2: заменить (replace)
ио.вывести("Тест 2: заменить");
пер текст = "Привет мир";
пер замененный = стр.заменить(текст, "мир", "Ponos");
ио.вывести(замененный);  // "Привет Ponos"

// Тест 3: верхний_регистр
ио.вывести("Тест 3: верхний_регистр");
пер строчные = "привет";
пер заглавные = стр.верхний_регистр(строчные);
ио.вывести(заглавные);  // "ПРИВЕТ"

// Тест 4: нижний_регистр
ио.вывести("Тест 4: нижний_регистр");
пер большие = "ПРИВЕТ";
пер маленькие = стр.нижний_регистр(большие);
ио.вывести(маленькие);  // "привет"

// Тест 5: разделить (split) - возвращает массив
ио.вывести("Тест 5: разделить");
пер слова = "яблоко,банан,апельсин";
пер разделенные = стр.разделить(слова, ",");
ио.вывести(длина(разделенные));   // 3
ио.вывести(разделенные[0]);        // "яблоко"
ио.вывести(разделенные[1]);        // "банан"
ио.вывести(разделенные[2]);        // "апельсин"

// Тест 6: Цепочка операций
ио.вывести("Тест 6: Цепочка операций");
пер исходная = "  ПРИВЕТ МИР  ";
пер шаг1 = стр.обрезать(исходная);
пер шаг2 = стр.нижний_регистр(шаг1);
пер результат = стр.заменить(шаг2, "мир", "ponos");
ио.вывести(результат);  // "привет ponos"

