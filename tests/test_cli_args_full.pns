использовать "стд/ввод_вывод" как ио;
использовать "стд/система" как сис;

ио.вывести("=== Полный тест аргументов командной строки ===");

// Получаем все аргументы
пер аргументы = сис.аргументы();
пер количество = длина(аргументы);

ио.вывести("Всего аргументов:");
ио.вывести(количество);
ио.вывести("");

// Выводим все аргументы
ио.вывести("Список всех аргументов:");
пер i = 0;
пока i < количество
    ио.вывести("  Аргумент " + i + ": " + аргументы[i]);
    i = i + 1;
конец
ио.вывести("");

// Выводим дополнительные аргументы (начиная с индекса 2)
ио.вывести("Дополнительные аргументы (начиная с индекса 2):");
пер j = 2;
пока j < количество
    ио.вывести("  " + аргументы[j]);
    j = j + 1;
конец

ио.вывести("");
ио.вывести("=== Тест завершён ===");
