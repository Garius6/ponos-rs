// Полный тест Фазы 1: Базовые классы и экземпляры
использовать "стд/ввод_вывод" как ио;

класс Точка
    x: число
    y: число

    конструктор(x_val: число, y_val: число)
        это.x = x_val;
        это.y = y_val;
    конец

    функ сумма()
        возврат это.x + это.y;
    конец

    функ установить_x(новое_x: число)
        это.x = новое_x;
    конец
конец

ио.вывести("=== Тест 1: Создание экземпляра ===");
пер p1 = Точка(10, 20);
ио.вывести(p1.x);
ио.вывести(p1.y);

ио.вывести("=== Тест 2: Вызов метода ===");
пер сумма1 = p1.сумма();
ио.вывести(сумма1);

ио.вывести("=== Тест 3: Изменение через метод ===");
p1.установить_x(100);
ио.вывести(p1.x);

ио.вывести("=== Тест 4: Прямое изменение поля ===");
p1.y = 200;
ио.вывести(p1.y);

ио.вывести("=== Тест 5: Множественные экземпляры ===");
пер p2 = Точка(5, 15);
ио.вывести(p2.x);
ио.вывести(p2.y);
ио.вывести(p1.x);
ио.вывести(p1.y);

ио.вывести("=== Все тесты фазы 1 пройдены! ===");
