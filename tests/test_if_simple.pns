использовать "стд/ввод_вывод" как ио;

ио.вывести("=== Тест условного оператора ===");

// Тест 1: Простое условие
ио.вывести("Тест 1: Простое условие");
пер x = 5;
если x > 3
    ио.вывести("x больше 3");
конец

// Тест 2: Условие с else
ио.вывести("Тест 2: Условие с иначе");
пер y = 2;
если y > 3
    ио.вывести("y больше 3");
иначе
    ио.вывести("y не больше 3");
конец

// Тест 3: Вложенные условия
ио.вывести("Тест 3: Вложенные условия");
пер z = 10;
если z > 5
    если z > 8
        ио.вывести("z больше 8");
    иначе
        ио.вывести("z между 5 и 8");
    конец
конец

ио.вывести("=== Все тесты завершены ===");
